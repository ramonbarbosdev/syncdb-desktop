{
  "name": "syncdb-desktop",
  "version": "1.0.59",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "Ramon Barbosa",
  "description": "Aplicativo de sincronização de banco de dados desktop",
  "license": "MIT",
  "homepage": "https://github.com/ramonbarbosdev/syncdb-desktop",
  "devDependencies": {
    "dotenv": "^16.5.0",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "tree-kill": "^1.2.2"
  },
  "build": {
    "appId": "com.suaempresa.syncdb",
    "productName": "SyncDB Desktop",
    "publish": [
      {
        "provider": "github",
        "owner": "ramonbarbosdev",
        "repo": "syncdb-desktop",
        "releaseType": "release",
        "vPrefixedTagName": true
      }
    ],
    "files": [
      "package.json",
      "main.js",
      "updater.js",
      "window.js",
      "back-end.js",
      "preload.js",
      "dist/browser/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/syncdb.jar",
        "to": "backend/syncdb.jar"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon",
      "extraResources": [
        {
          "from": "backend/jre",
          "to": "backend/jre"
        }
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
